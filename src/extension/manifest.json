{
    "name": "Speechmote",
    "description": "Speech to emoji extension for assistive technology users.",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "commands": {
        "stop" : {
            "suggested_key": {
                 "default": "Alt+Shift+S" 
            },
            "description": "Stop Recording"
        }
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["contextMenus","tabs","activeTab","http://*/*", "file://*/*", "https://*/*", "storage", "tabCapture", "<all_urls>"],
    "web_accessible_resources": ["audiosources.html"]
}